{
  "name": "taichi-ui-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:ui": "pnpm --filter @taichi-ui/components dev",
    "dev:playground": "pnpm --filter playground dev",
    "dev:storybook": "pnpm --filter storybook storybook",
    "build:ui": "pnpm --filter @taichi-ui/components build",
    "build:playground": "pnpm --filter playground build",
    "build:storybook": "pnpm --filter storybook build-storybook",
    "build:all": "pnpm -r build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write .",
    "preview:playground": "pnpm --filter playground preview",
    "clean": "pnpm -r clean",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/react-transition-group": "^4.4.12",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3"
  },
  "dependencies": {
    "react-transition-group": "^4.4.5"
  }
}
